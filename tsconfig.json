{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "lib": ["ESNext"],
    "target": "es2018",
    "outDir": "lib",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "newLine": "lf"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"],
  "typedocOptions": {
    "name": "ATSquad Token Provider",
    "readme": "./README.md",
    "mode": "library",
    "out": "docs",
    "excludePrivate": true,
    "excludeNotExported": true,
    "excludeProtected": true
  }
}
